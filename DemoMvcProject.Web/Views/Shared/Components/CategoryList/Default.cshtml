@model List<CategoryViewModel>

<p>
    <a class="btn btn-outline-success" asp-action="Add" asp-controller="Category">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Kategori
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.CategoryName
                </td>
                <td>
                    <a class="btn btn-warning" asp-action="Update" asp-controller="Category" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

