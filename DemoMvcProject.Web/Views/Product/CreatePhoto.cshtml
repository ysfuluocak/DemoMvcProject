@model CreateProductPhotoDto
@{
    ViewData["Title"] = "CreatePhoto";
}

<h1>CreatePhoto</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreatePhoto" asp-controller="Product" enctype="multipart/form-data">
            <input type="hidden" asp-for="ProductId" value="@Model.ProductId" />
            <div class="form-group mt-3">
                <label name="file" id="file" class="control-label">Ürün Fotoğrafı</label>
                <input type="file" name="file" id="file" accept="image/*" class="form-control" />
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
